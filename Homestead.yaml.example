---
ip: "192.168.10.10"
memory: 2048
cpus: 1
hostname: talent-linker
name: talent-linker
provider: virtualbox

authorize: ~/.ssh/id_rsa.pub

keys:
    - ~/.ssh/id_rsa

folders:
    - map: "/home/etienne/git_repos/talent-linker"
      to: "/home/vagrant/talent-linker"

sites:
    - map: homestead.app
      to: "/home/vagrant/talent-linker/public"

databases:
    - homestead
    - testing

